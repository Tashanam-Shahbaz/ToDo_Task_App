<Window x:Class="TODOAPP.View.AddTakWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TODOAPP.View"
        mc:Ignorable="d"
        Title="Add Task" Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Task Name:"/>
        <TextBox x:Name="txtTaskName" Grid.Row="1" Margin="5"/>

        <Button Grid.Row="2" Content="Add Task" Click="AddTask_Click" HorizontalAlignment="Center" Margin="5"/>
    </Grid>
</Window>
